@using HobbyTeamManager.Models
@{
    var site = Utilities.Miscellaneous.GetObjectFromSessionString<Site>(Context);
    if (site == null)
    {
        site = new Site();
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hobby Team Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HobbyTeamManager.styles.css" asp-append-version="true" />
</head>
<body style="background-color: @site.BgColorBody; color: @site.FgColorBody">
    <header style="background-color: @site.BgColorHeader; color: @site.FgColorHeader">
        @if (!string.IsNullOrEmpty(@site.Headline))
        {
            <p align="center">
                <font size="8" face="Arial Black">@site.Headline</font>
            </p>
        }
        @if (!string.IsNullOrEmpty(@site.Headline2))
        {
            <p align="center">
                <font size="8" face="Arial Black">@site.Headline2</font>
            </p>
        }
        <partial name="_NavBarPartial" />
    </header>
    <div style="background-color: @site.BgColorMain; color: @site.FgColorMain">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer"
            style="background-color: @site.BgColorFooter; color: @site.FgColorFooter">
        <partial name="_FooterPartial" />
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>