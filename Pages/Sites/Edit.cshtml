@page
@model MySqlTestRazor.Pages.Sites.EditModel

@{
    ViewData["Title"] = "Ändern";
    Layout = "../Shared/_LayoutStart.cshtml";
}

<h1>Hobby Mannschaft ändern</h1>

<h4>Hobby Mannschaft: @Model.Site.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Site.Id" />
            <p>
                <h4>Optionen/Parameter</h4>
            </p>
            <div class="form-group">
                <label asp-for="Site.Name" class="control-label"></label>
                <input asp-for="Site.Name" class="form-control" />
                <span asp-validation-for="Site.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site.Logo" class="control-label"></label>
                @if (Model.Site.Logo != null)
                {
                    <img id="pic" style="border:1px solid black" width="80" height="100" src="data:image/*;base64,@(Convert.ToBase64String(Model.Site.Logo))">
                }
                else
                {
                    <img id="pic" style="border:1px solid black" width="80" height="100"  src="">
                }
                <input type="file" accept="image/png, image/jpeg"
                        asp-for="Site.Logo" class="form-control"
                        onchange="document.getElementById('pic').src =
                        window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="Site.Logo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site.Motto" class="control-label"></label>
                <input asp-for="Site.Motto" class="form-control" />
                <span asp-validation-for="Site.Motto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site.ConfirmationModeId" class="control-label"></label>
                <select asp-for="Site.ConfirmationModeId" class="form-control"
                    asp-items="@Model.ConfirmationModeOptions"></select>
                <span asp-validation-for="Site.ConfirmationModeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site.TeamColor1" class="control-label"></label>
                <input type="color" asp-for="Site.TeamColor1" value=@Model.Site.TeamColor1 />
                <span asp-validation-for="Site.TeamColor1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site.TeamColor2" class="control-label"></label>
                <input type="color" asp-for="Site.TeamColor2" value=@Model.Site.TeamColor2 />
                <span asp-validation-for="Site.TeamColor2" class="text-danger"></span>
            </div>
            <p>&nbsp;</p>
            <p>
                <h4>Design</h4>
                <h5>Seitenaufbau</h5>
            </p>
            <div class="form-group">
                <label asp-for="Site.MenuPositionId" class="control-label"></label>
                <select asp-for="Site.MenuPositionId" class="form-control"
                    asp-items="@Model.MenuPositionOptions"></select>
                <span asp-validation-for="Site.MenuPositionId" class="text-danger"></span>
            </div>
            <p>&nbsp;</p>
            <p>
                <h5>Farben der Seiten</h5>
            </p>
            <div class="form-group">
                <label asp-for="Site.BgColorBody" class="control-label"></label>
                <input type="color" asp-for="Site.BgColorBody" value=@Model.Site.BgColorBody/>
                <span asp-validation-for="Site.BgColorBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site.FgColorBody" class="control-label"></label>
                <input type="color" asp-for="Site.FgColorBody" value=@Model.Site.FgColorBody/>
                <span asp-validation-for="Site.FgColorBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site.BgColorHeader" class="control-label"></label>
                <input type="color" asp-for="Site.BgColorHeader" value=@Model.Site.BgColorHeader/>
                <span asp-validation-for="Site.BgColorHeader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site.FgColorHeader" class="control-label"></label>
                <input type="color" asp-for="Site.FgColorHeader" value=@Model.Site.FgColorHeader/>
                <span asp-validation-for="Site.FgColorHeader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site.BgColorMain" class="control-label"></label>
                <input type="color" asp-for="Site.BgColorMain" value=@Model.Site.BgColorMain/>
                <span asp-validation-for="Site.BgColorMain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site.FgColorMain" class="control-label"></label>
                <input type="color" asp-for="Site.FgColorMain" value=@Model.Site.FgColorMain/>
                <span asp-validation-for="Site.FgColorMain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site.BgColorFooter" class="control-label"></label>
                <input type="color" asp-for="Site.BgColorFooter" value=@Model.Site.BgColorFooter/>
                <span asp-validation-for="Site.BgColorFooter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site.FgColorFooter" class="control-label"></label>
                <input type="color" asp-for="Site.FgColorFooter" value=@Model.Site.FgColorFooter/>
                <span asp-validation-for="Site.FgColorFooter" class="text-danger"></span>
            </div>
            <p>&nbsp;</p>
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Zurück zur Liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
