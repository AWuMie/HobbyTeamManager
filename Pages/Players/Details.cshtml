@page "{id:int?}"
@model MySqlTestRazor.Pages.Players.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Spielerdaten</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.NickName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.NickName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Player.BirthDate.ToShortDateString())
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.ProfilePicture)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Player.ProfilePicture != null)
            {
                <img border="1" width="80" height="100" src="data:image/*;base64,@(Convert.ToBase64String(Model.Player.ProfilePicture))">
            }
            else
            {
                <img border="1" width="80" height="100"  src="">
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player.Score)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player.Score)
        </dd>
        @if (Model.isAdmin)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Player.IsAdmin)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Player.IsAdmin)
            </dd>
            @if ((Model.Player.MembershipTypeId == 2) &&       @*Guest*@
                 (Model.Player.ScoreFromPlayer != null))
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Player.ScoreFromPlayer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Player.ScoreFromPlayer)
                </dd>
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Player.MembershipTypeId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Player.MembershipType.Name)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Player.Id">Ändern</a> |
    <a asp-page="./Index">Zurück zur Liste</a>
</div>
