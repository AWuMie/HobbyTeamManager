@page
@model HobbyTeamManager.Pages.Seasons.CreateModel

@{
    ViewData["Title"] = "Neue Saison";
}

<h1>Neue Saison</h1>

<h4>Seasondaten</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Season.Year" class="control-label"></label>
                <select asp-for="SelectedYear" class="form-control"
                        asp-items="@Model.YearSL">
                    <option value="">-- Jahr auswählen --</option>
                </select>
                <span asp-validation-for="SelectedYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Season.StartMonth" class="control-label"></label>
                <select asp-for="SelectedMonth" class="form-control"
                        asp-items="@Model.MonthSL">
                    <option value="">-- Startmonat auswählen --</option>
                </select>
                <span asp-validation-for="SelectedMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Season.MatchOnDay" class="control-label"></label>
                <select asp-for="SelectedWeekDay" class="form-control"
                        asp-items="@Model.WeekDaySL">
                    <option value="">-- Spieltag in der Woche auswählen --</option>
                </select>
                <span asp-validation-for="SelectedWeekDay" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Erzeuge neue Saison" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p></p>
<div>
    <a asp-page="Index">Zurück zur Liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
