@page "{id:int?}"
@model MySqlTestRazor.Pages.Seasons.EditModel

@{
    ViewData["Title"] = "Saison ändern";
}

<h1>Saison ändern</h1>

<h4>Saisondaten</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Season.Id" />
            <div class="form-group">
                <label asp-for="Season.Year" class="control-label"></label>
                <select asp-for="SelectedYear" class="form-control"
                        asp-items="@Model.YearSL"></select>
                <span asp-validation-for="SelectedYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Season.StartMonth" class="control-label"></label>
                <select asp-for="SelectedMonth" class="form-control"
                        asp-items="@Model.MonthSL"></select>
                <span asp-validation-for="SelectedMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Season.MatchOnDay" class="control-label"></label>
                <select asp-for="SelectedWeekDay" class="form-control"
                        asp-items="@Model.WeekDaySL"></select>
                <span asp-validation-for="SelectedWeekDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Zurück zur Liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
