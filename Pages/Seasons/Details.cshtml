@page "{id:int?}"
@model HobbyTeamManager.Pages.Seasons.DetailsModel
@using System.Globalization;
@using HobbyTeamManager.Models

@{
    ViewData["Title"] = "Saison Details";

    Season season; 
    if (@Model.Season == null)
    {
        season = new Season();
        season.Id = 1;
        season.Year = 0;
        season.StartMonth = 1;
        season.MatchOnDay = 1;
    }
    else
    {
        season = @Model.Season;
    }

    int year = season.Year;
    string month = CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(season.StartMonth);
    DayOfWeek day = (season.MatchOnDay == 7) ? DayOfWeek.Sunday : (DayOfWeek)season.MatchOnDay;
    string weekDay = CultureInfo.CurrentCulture.DateTimeFormat.GetDayName(day);
}

<h1>Saison Details</h1>

<div>
    <h4>Alle Spieltage am @weekDay in @year startend im @month</h4>
